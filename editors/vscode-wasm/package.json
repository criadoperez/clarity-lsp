{
	"name": "clarity-vscode",
	"description": "A language server in a web extension",
	"author": "Ludo Galabru <ludo@hiro.so>",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/hirosystems/clarity-lsp"
	},
	"publisher": "hirosystems",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"browser": "./client/dist/browserClientMain",
	"contributes": {
		"configuration": [
			{
				"order": 22,
				"id": "clarity-vscode",
				"title": "clarity-vscode",
				"properties": {
					"clarity-vscode.trace.server": {
						"type": "string",
						"scope": "window",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "verbose",
						"description": "Traces the communication between VS Code and the clarity-vscode language server."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"chrome": "npm run compile && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./test-data"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"@vscode/test-web": "^0.0.12",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"path-browserify": "^1.0.1",
		"ts-loader": "^9.2.3",
		"typescript": "^4.4.3",
		"webpack": "^5.44.0",
		"webpack-cli": "^4.7.2"
	}
}
